// database
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// generator
generator client {
  provider             = "prisma-client-js"
  recursive_type_depth = 5
}

// data models

model User {
  id           Int         @id @default(autoincrement())
  telegramId   Int         @unique
  telegramName String
  subscribed   Boolean
  role         String
  sites        UserSites[]
}

model UserSites {
  user       User     @relation(fields: [userid], references: [id])
  userid     Int
  site       Site     @relation(fields: [siteid], references: [id])
  siteid     Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([userid, siteid])
}

model Site {
  id       Int         @id @default(autoincrement())
  name     String
  url      String
  lastPost String
  users    UserSites[]
  posts    Post[]
}

model Post {
  id     Int    @id @default(autoincrement())
  title  String
  text   String
  img    String
  url    String @unique
  site   Site   @relation(fields: [siteid], references: [id])
  siteid Int
  old    Int[]
  date   DateTime @default(now())
}
