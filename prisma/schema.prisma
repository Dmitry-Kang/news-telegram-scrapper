// database
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// generator
generator client {
  provider             = "prisma-client-js"
  recursive_type_depth = 5
}

// data models

model Site {
  id       Int         @id @default(autoincrement())
  name     String
  url      String
  posts    Post[]
}

model Post {
  id     Int    @id @default(autoincrement())
  title  String @unique
  text   Json
  img    String[]
  url    String
  site   Site   @relation(fields: [siteid], references: [id])
  siteid Int
  old    Boolean
  date   DateTime @default(now())
}
